@model Project



<h2>Skapa nytt projekt: </h2>

<form asp-action="CreateProject" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="CreatorId" value="@ViewData["CreatorId"]" />
    
    <div class="form-group">
        <label for="Title">Titel: </label>
        <input asp-for="Title" class="form-control" id="Title" />
    </div>

    
    <div class="form-group">
        <label for="Description">Beskrivning: </label>
        <input asp-for="Description" class="form-control" id="Description" />
    </div>

    
    <div class="form-group">
        <label for="Information">Information: </label>
        <input asp-for="Information" class="form-control" id="Information" />
    </div>

    
    <button type="submit" class="btn btn-primary">Lägg till</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tillbaka</a>
